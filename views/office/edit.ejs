<%- include('../partials/header.ejs') %>
    <main>
        <form method="POST" action="/offices/<%=office.id%>?_method=PUT">
            <table>
                <tr>
                    <td><label for="name">Name:</label></td>
                    <td><input type="text" id="name" name="name" placeholder="Name" value="<%=office.name%>" required></td>
                </tr>
                <tr>
                    <td><label for="details">Details:</label></td>
                    <td><textarea name="details" id="details" cols="50" rows="3" placeholder="Description" required><%=office.details%></textarea></td>
                </tr>
                <tr>
                    <td><label for="address">Address:</label></td>
                    <td><input type="text" id="address" name="address" placeholder="Address" value="<%=office.address%>" required></td>
                </tr>
                <tr>
                    <td><label for="city">City:</label></td>
                    <td><input type="text" id="city" name="city" placeholder="City" value="<%=office.city%>" required></td>
                </tr>
                <tr>
                    <td><label for="state">State:</label></td>
                    <td><input type="text" id="state" name="state" placeholder="State" value="<%=office.state%>" required></td>
                </tr>
                <tr>
                    <td><label for="zip">Zip Code:</label></td>
                    <td><input type="text" id="zip" name="zip" placeholder="Zip Code" value="<%=office.zip%>" required></td>
                </tr>
                <tr>
                    <td><label for="country">Country:</label></td>
                    <td><input type="text" id="country" name="country" placeholder="Country" value="<%=office.country%>" required></td>
                </tr>
                <tr>
                    <td><label for="phone">Phone:</label></td>
                    <td><input type="tel" id="phone" name="phone" placeholder="Phone Number" value="<%=office.phone%>" required></td>
                </tr>
                <tr>
                    <td><label for="email">Email:</label></td>
                    <td><input type="email" id="email" name="email" placeholder="Email" value="<%=office.email%>" required></td>
                </tr>
                <tr>
                    <td><label for="image">Image URL:</label></td>
                    <td><input type="text" id="image" name="image" placeholder="Image URL" value="<%=office.image%>" required></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button>Update</button>
                    </td>
                </tr>
            </table>
        </form>
    </main>
<%- include('../partials/footer.ejs') %>